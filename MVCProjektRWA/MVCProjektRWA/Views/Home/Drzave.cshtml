@model IEnumerable<MVCProjektRWA.Models.MyModels.Drzava>

@{
    ViewBag.Title = "Pregled Drzava";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary">Države</h2>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td class="text-right">
                    @Html.ActionLink("Gradovi", "Gradovi", new { id = item.IDDrzava }, new { @class = "btn btn-info" })
                </td>
            </tr>
        }
    </tbody>

</table>
